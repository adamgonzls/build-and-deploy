---
import Base from './Base/Base.astro'
const props = Astro.props
const {title} = props
---

<style>
  .grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 1em;
  }
  img {
    display: block;
  }
</style>

<Base {...props}>
  <div class="wrap">
    <h1>{title}</h1>
    <div class="grid">
      <div class="grid-item"><img src="/images/2022-04-adam-bike-glasses.jpeg" alt="Gallery image"></div>
      <div class="grid-item"><img src="/images/2022-04-adam-bike-glasses.jpeg" alt="Gallery image"></div>
      <div class="grid-item"><img src="/images/2022-04-adam-bike-glasses.jpeg" alt="Gallery image"></div>
      <div class="grid-item"><img src="/images/2022-04-adam-bike-glasses.jpeg" alt="Gallery image"></div>
      <div class="grid-item"><img src="/images/2022-04-adam-bike-glasses.jpeg" alt="Gallery image"></div>
      <div class="grid-item"><img src="/images/2022-04-adam-bike-glasses.jpeg" alt="Gallery image"></div>
    </div>
    <slot>Default content</slot>
  </div>
</Base>